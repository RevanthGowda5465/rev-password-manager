<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

    <!-- Defines where log messages will be written -->
    <Appenders>

        <!-- Writes logs into a file inside the logs folder -->
        <File name="FileLogger" fileName="logs/application.log" append="true">
            <!-- Controls how each log line will look -->
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n"/>
        </File>

    </Appenders>

    <!-- Controls logging level and connects appenders -->
    <Loggers>

        <!-- Root logger sends INFO and above logs to FileLogger -->
        <Root level="info">
            <AppenderRef ref="FileLogger"/>
        </Root>

    </Loggers>

</Configuration>
